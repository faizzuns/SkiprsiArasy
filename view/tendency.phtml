<script>
    function changeDetail(val) {
        let number = document.getElementById('value');
        let name = document.getElementById('name');
        let comment = 'Netral';
        let x = 10;
        let print = 0;
        if (val < 10) {
            comment = document.getElementById('first');
            x = val;
            print = 10 - x;
        } else if (val > 10) {
            comment = document.getElementById('second');
            x = 10 - (val - 10);
            print = 10 - x;
        }

        name.innerHTML = comment;
        number.innerHTML = print;

    }
